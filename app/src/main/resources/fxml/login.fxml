<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mnov34.CUBES4solo.controller.LoginController">
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <!-- Title -->
            <Label text="Employee Annuaire" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <!-- Login Section -->
            <GridPane alignment="CENTER" hgap="10" vgap="10">
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" promptText="Enter username"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField" promptText="Enter password"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Button text="Login" onAction="#handleLogin"
                        GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Button text="Retour" onAction="#handleBack"
                        GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label fx:id="messageLabel"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </center>
</BorderPane>
